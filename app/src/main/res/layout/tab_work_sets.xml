<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:orientation="vertical"
        tools:context="com.eat_wisely.kultraining.WorkoutActivity">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_border">

            <TextView
                android:id="@+id/squat_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/squat"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/squat_title"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="70 кг"
                android:textSize="16sp" />

            <Button
                android:id="@+id/squatSet1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/squat_title"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/squatSet2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignBottom="@id/squatSet1"
                android:layout_toEndOf="@id/squatSet1"
                android:layout_toRightOf="@id/squatSet1" />

            <Button
                android:id="@+id/squatSet3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignBottom="@id/squatSet2"
                android:layout_toEndOf="@id/squatSet2"
                android:layout_toRightOf="@id/squatSet2" />
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_border">

            <TextView
                android:id="@+id/benchpress_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/benchpress"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/benchpress_title"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="70 кг"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bpSet1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/benchpress_title"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/bpSet2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignBottom="@id/bpSet1"
                android:layout_toEndOf="@id/bpSet1"
                android:layout_toRightOf="@id/bpSet1" />

            <Button
                android:id="@+id/bpSet3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignBottom="@id/bpSet2"
                android:layout_toEndOf="@id/bpSet2"
                android:layout_toRightOf="@id/bpSet2" />
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_border">

            <TextView
                android:id="@+id/row_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/row"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/row_title"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="70 кг"
                android:textSize="16sp" />

            <Button
                android:id="@+id/rowSet1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/row_title"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/rowSet2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignBottom="@id/rowSet1"
                android:layout_toEndOf="@id/rowSet1"
                android:layout_toRightOf="@id/rowSet1" />

            <Button
                android:id="@+id/rowSet3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignBottom="@id/rowSet2"
                android:layout_toEndOf="@id/rowSet2"
                android:layout_toRightOf="@id/rowSet2" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:text="@string/end" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>